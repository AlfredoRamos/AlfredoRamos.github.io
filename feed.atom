---
layout: null
title: 'Atom Feed'
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>{{ page.title | append: ' :: ' | append: site.title | smartify | xml_escape }}</title>
	<subtitle>{{ site.description | xml_escape }}</subtitle>
	<link rel="self" type="application/atom+xml" href="{{ page.url | absolute_url }}" />
	<link rel="alternate" type="text/html" href="{{ '/' | absolute_url }}"{% if site.lang %} href="{{ site.lang }}"{% endif %} />
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>{{ '/' | absolute_url | xml_escape }}</id>

	{% if site.author %}
	<author>
		<name>{{ site.author.name | xml_escape }}</name>
		<uri>{{ site.author.uri }}</uri>
	</author>
	{% endif %}

	{% assign posts = site.posts | where_exp: "post", "post.draft != true" %}
	{% for post in posts limit: 10 %}
	<entry{% if post.lang %} xml:lang="{{ post.lang }}"{% endif %}>
		<title>{{ post.title | xml_escape }}</title>
		<link rel="alternate" type="text/html" href="{{ post.url | absolute_url }}" title="{{ post.title | xml_escape }}" />
		<published>{{ post.date | date_to_xmlschema }}</published>
		<updated>{{ post.updated_at | default: post.date | date_to_xmlschema }}</updated>
		<id>{{ post.id | absolute_url | xml_escape }}</id>
		<summary>{{ post.excerpt | strip_html | normalize_whitespace | xml_escape }}</summary>

		{% if post.category %}
		<category term="{{ post.category | xml_escape }}" />
		{% endif %}

		{% for tag in post.tags %}
		<category term="{{ tag | xml_escape }}" />
		{% endfor %}
	</entry>
	{% endfor %}
</feed>
